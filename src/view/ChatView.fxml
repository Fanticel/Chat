<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.ChatViewController">
   <children>
      <TextArea fx:id="mainTextArea" editable="false" prefHeight="300.0" prefWidth="600.0" promptText="Here messages will appear..." />
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <TextField fx:id="inputField" onKeyPressed="#enterPressed" prefHeight="26.0" prefWidth="393.0">
               <HBox.margin>
                  <Insets right="50.0" />
               </HBox.margin>
            </TextField>
            <Button fx:id="sendBtn" mnemonicParsing="false" onAction="#sendBtnPress" text="Send" />
         </children>
      </HBox>
   </children>
</VBox>
